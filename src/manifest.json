{
    "name": "AiChat",
    "version": "1.0.0",
    "manifest_version": 3,
    "author": "wforguo@gmail.com",
    "description": "AiChat, ChatGpt Chrome Plugin",
    "icons": {
        "16": "/assets/img/dev.png",
        "48": "/assets/img/dev.png",
        "96": "/assets/img/dev.png",
        "128": "/assets/img/dev.png"
    },
    "action": {
        "default_title": "AiChat",
        "default_popup": "/popup/index.html"
    },
    "permissions": [
        "tabs",
        "contextMenus",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "background": {
        "service_worker": "/background/index.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/contentScript/index.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "contentScript/style.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
